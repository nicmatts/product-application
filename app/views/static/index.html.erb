<div class="row">
  <div class="jumbotron">
    <h1>Product Application</h1>
    <p>Calculate how much product you need to add to the tank.</p>
  </div>

 <form role="form">
    <div class="form-group">
    <p><label>Tank capacity:  </label><input class="form-control" id="initial-capacity"></input></p>
    <p><label>Current tank volume:  </label><input class="form-control" id="current-volume"></input></p>
    <p><label>Application rate:  </label><input class="form-control" id="application-rate"></input> gallons per acre</p>
    
    <div id="total-acres"></div>

  </div>
</form>
<form role="form">
    <div class="form-group">
      <select class="form-control" id="product-name">
        <option value = "no product" >Choose a product</option>
         <% @products.each do |product| %>
            <option value = "<%= product.product_rate %> <%= product.product_unit %> "><%= product.name %></option>
        <% end %>
      </select>
    </div>

    

    <div id="rate-info">
    </div>

</form>
